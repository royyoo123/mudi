<body>
  <div class="search-container">
    <%= link_to map_path do %>
    <button type="button" class="map-btn">MAP</button>
    <% end %>
    <div id="search-bar">
      <%= form_tag events_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        id: "search-bar-input",
        placeholder: "find an event"
        %>
        <%= submit_tag "âžœ", id: "searchbar-btn" %>
      <% end %>
    </div>
  </div>
  <div class="filter-bar">
    <div class= mood-filter>
      <h4>mood</h4>
    </div>
    <div class="date-filter">
      <h4>date</h4>
    </div>
  </div>
  <div class="container">
    <div class="row row-cols-2-s justify-content-center">
      <% @events.each do |e| %>
      <div class ="col">
        <%= link_to event_path(e) do %>
        <div class="card text-center mt-3 mb-3" id="index-cards">
          <% e.photos.each do |photo| %>
          <%= cl_image_tag photo.key, crop: :fill, class: "card-photo" %>
          <div class="card-title">
            <h4><%= e.name %></h4>
          </div>
          <div class="card-details">
            <p><%= e.price %></p>
          </div>
          <% end %>
        </div>
      <% end %>
      </div>
      <% end %>
    </div>
  </div>
