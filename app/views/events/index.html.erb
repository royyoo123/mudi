<body>
  <div class="search-container">
    <button type="button" class="map-btn">MAP</button>
    <div class="search-bar">
      <h4>search for an activity</h4>
    </div>
  </div>
  <div class="filter-bar">
    <div class= mood-filter>
      <h4>mood</h4>
    </div>
    <div class="date-filter">
      <h4>date</h4>
    </div>
  </div>
  <div class="container">
    <div class="row row-cols-2-s">
      <% @events.each do |e| %>
      <div class ="col">
        <%= link_to event_path(e) do %>
        <div class="card text-center mt-3 mb-3 p-3">
          <h4><%= e.name %></h4>
          <p><%= e.address  %></p>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
<body>
