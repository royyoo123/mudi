<body>
  <h2>search bar</h2>
  <h2>filter bar</h2>

  <div class="container">
  <h1 class="text-center mt-4 mb-4">Events:</h1>

    <div class="row row-cols-2-s">
      <% @events.each do |e| %>
      <div class ="col">
        <div class="card text-center mt-3 mb-3 p-3">
          <h4><%= e.name %></h4>
          <p><%= e.address  %>
          <%= link_to "View details", event_path(e), class: "btn" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
