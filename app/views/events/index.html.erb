  <input id="toggle1" type="checkbox">
  <label for="toggle1" class="mood-drop-btn btn-group mt-1 btn-up1" id="date-dropdown">
    <span class="iconify" data-icon="akar-icons:calendar" data-inline="false"></span>
  </label>
