<body>
	<div class="container mt-2">
		<div>
			<h1 class="title"><%= @event.name %></h1>
			<h3 class="address"><%= @event.address %></h3>
		</div>
		<div class="date-row mt-1 mb-2">
			<h3 class="date"><%= @event.date %></h3>
			<h3 class="time">@<%= @event.time %></h3>
		</div>
		<div class="photo-container">
			<% @event.photos.each do |photo| %>
				<%= cl_image_tag photo.key, height: 200, width: 300, crop: :fill, class: "photo" %>
			<% end %>
			<h3 class="price">Price: $<%= @event.price %></h3>
		</div>
		<div>
			
			<h3>Description: <%= @event.description %></h3>
		</div>
		</div>
		<div class="confirm">
      <%= link_to confirmation_path(@event) do %>
        <button type="button" id="book-btn">BOOK</button>
      <% end %>
		</div>
    <div class="link-back">
			<%= link_to "Back", events_path %>
		</div>
	</div>
</body>