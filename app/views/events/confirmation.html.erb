<div class="container">
	<div class="title">
		<h1>order details</h1>
	</div>
	<div class="confirmation-details" >
		<h3 id="name"><%= @event.name %></h3>
		<br>
		<h3 class="info" id="event-address"><%= @event.address %></h3>
		<br>
		<h3 class="info" id="event-description"><%= @event.description %></h3>
		<br>
		<% unless @event.start_date.nil? %>
		<h3 class="info"><%= @event.start_date.strftime("%Y/%m/%d %l:%M %p") %></h3>
		<br>
		<% end %>
		<h3 class="info">Price:&nbsp&nbsp$<%= @event.price %></h3>
	</div>
	<br>

	<%= link_to event_attendances_path(@event), method: "post" do %>
        <button type="button" id="book-btn">Sync to calendar</button>
      <% end %>
</div>
