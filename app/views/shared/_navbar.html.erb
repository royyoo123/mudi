<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <% if current_page?(root_path) %>
    <%= link_to root_path, class: "navbar-brand-hidden" do %>
      <%= image_tag "mudi_logo.png" %>
    <% end %>
  <% else %>
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "mudi_logo.png" %>
    <% end %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon" style="color:white"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <% if policy(Event).new? %>
            <%= link_to "Add event", new_event_path, class: "dropdown-item" %>
          <% end %>
        </li class="nav item">
          <%= link_to "Bookmarks", bookmarks_path, class: "dropdown-item" %>
        </li class="nav-item">
          <%= link_to "Activities", attendances_path, class: "dropdown-item" %>
        </li class="nav-item">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      <% else %>
        <li class="nav-item text-right" >
          <%= link_to "Login", new_user_session_path, class: "login-link" %>
      <% end %>
    </ul>
  </div>
</div>
         
          
